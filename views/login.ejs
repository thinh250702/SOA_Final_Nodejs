<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>La Maison - Login</title>
    <%- include('partials/library.ejs'); %> 
    <link rel='stylesheet' href='/stylesheets/login.css'>
</head>
<body>
    <div class="container">
        <div class="logo">
            <img src="/images/logo_typo.png" alt="">
        </div>
        <div class="form_container">
            <h1>Log In</h1>
            <form action="/login" method="post">
                <div class="display">
                    <input type="text" name="pin_code" placeholder="Enter your code">
                </div>
                <% if (errorMessage) { %>
                    <div class="error"><%= errorMessage %></div>
                <% } else { %>
                    <div class="error"></div>
                <% } %>
                <div>
                    <input type="button" value="1" onclick=" pin_code.value += '1' ">
                    <input type="button" value="2" onclick=" pin_code.value += '2' ">
                    <input type="button" value="3" onclick=" pin_code.value += '3' ">
                </div>
                <div>
                    <input type="button" value="4" onclick=" pin_code.value += '4' ">
                    <input type="button" value="5" onclick=" pin_code.value += '5' ">
                    <input type="button" value="6" onclick=" pin_code.value += '6' ">
                </div>
                <div>
                    <input type="button" value="7" onclick=" pin_code.value += '7' ">
                    <input type="button" value="8" onclick=" pin_code.value += '8' ">
                    <input type="button" value="9" onclick=" pin_code.value += '9' ">
                </div>
                <div>
                    <input type="button" value="AC" onclick=" pin_code.value = '' ">
                    <input type="button" value="0" onclick=" pin_code.value += '0' ">
                    <input type="button" value="DE" onclick=" pin_code.value = pin_code.value.toString().slice(0,-1) ">
                </div>
                <div class="submit">
                    <input type="submit" value="ENTER">
                </div>
            </form>
        </div>
    </div>
</body>
</html>